component extends="coldbox.system.EventHandler"{	// Default Action	function index(event,rc,prc){			prc.welcomeMessage 	= "Welcome to ColdBox!";		prc._link 			= event.buildLink( 'main.exercise' );		event.setValue( name="pageValue", value=10);		event.paramValue( name="page", value=1);		if(event.valueExists( name="page")){			event.setValue( name="pageExists", value=true);		}		//event.ShowDebugPanel(false)		//event.setView("main/index");		event.setView( view="simple/index" );		//event.renderData(data='<h1>Hello</h1>');		//return "<h2>Hello</h2>"		/*		prc._data = {			name="Florindo López", 			age=27, 			awesome=["trabajo","tiempo libre", 3, 4]		};		*/		//event.renderData(type="JSON", data=prc._data);		//event.renderData(type="XML", data=prc._data);		//event.renderData(type="PDF", data=renderVieW("test/_data"));			}	function exercise(event, rc, prc){		//event.renderData(data='<h1>Hello</h1>');		//return "<h2>Hello</h2>"				prc._data = {			name="Florindo López", 			age=27, 			awesome=["trabajo","tiempo libre", 3, 4]		};				//event.renderData(type="JSON", data=prc._data);		//event.renderData(type="XML", data=prc._data);		event.renderData(type="PDF", data=renderVieW("test/_data"));	}	function today(event, rc, prc) cache="true" cacheTimeout="true"{		prc.today 		= now();		prc.xehEcho 	= 'main.echo';		prc.xehPurge	= 'main.purgecache';		prc.contactsWidget = runEvent( event='contact.list', eventArguments={widget=true});		event.setView('main/today');	}	function echo(event, rc, prc){			event.paramValue( "echoText", "NOT SENT" );		prc.xehToday = 'main.today';		event.setView('main/echo');	}	function purgeCache(event, rc, prc){			getCache("template").clearEvent('main');			//getCache("template").expireAll();		return "Cache cleared!";	}	// Do something	function doSomething(event,rc,prc){		setNextEvent("main.index");	}	function onPageNotFound( event, rc, prc ){        event.setView( view="main/onPageNotFound" )            .setHTTPHeader( statusCode="404", statusText="Page Not Found");    }	/************************************** IMPLICIT ACTIONS *********************************************/	function onAppInit(event,rc,prc){	}	function onRequestStart(event,rc,prc){		setSetting( name="MyDynamicSetting ", value="MyDynamicSetting already exists" );				if(event.getValue("print",false)){			event.setLayout("Layout.other");		}	}	function onRequestEnd(event,rc,prc){	}	function onSessionStart(event,rc,prc){	}	function onSessionEnd(event,rc,prc){		var sessionScope = event.getValue("sessionReference");		var applicationScope = event.getValue("applicationReference");	}	function onException(event,rc,prc){		//Grab Exception From private request collection, placed by ColdBox Exception Handling		var exception = prc.exception;		//Place exception handler below:	}	function onMissingTemplate(event,rc,prc){		//Grab missingTemplate From request collection, placed by ColdBox		var missingTemplate = event.getValue("missingTemplate");	}}